<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beginner.micromaster.contactlist.DetailActivity">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/image_width"
        android:layout_height="75dp"
        android:src="@drawable/contact"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <TextView
        android:text="Email"
        android:id="@+id/emailView"
        android:layout_width="@dimen/image_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIcon"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center"/>
    <TextView
        android:text="Phone number"
        android:id="@+id/phoneNumberView"
        android:layout_width="@dimen/image_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailView"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center"/>
    
    <TextView
        android:text="@string/msg_name"
        android:id="@+id/tvName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivIcon"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="@string/msg_last_name"
        android:id="@+id/tvLastName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivIcon"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    
    <TextView
        android:text="@string/msg_email"
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emailView"
        android:layout_toRightOf="@+id/emailView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="@string/msg_phone_number"
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phoneNumberView"
        android:layout_toRightOf="@+id/phoneNumberView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

</RelativeLayout>
